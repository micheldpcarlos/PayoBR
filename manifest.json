{
  "manifest_version": 2,

  "name": "PayoBR",
  "description": "This extension will show you the current dollar rate and the exchange rate to BRL in Payoneer",
  "version": "1.1.1",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
